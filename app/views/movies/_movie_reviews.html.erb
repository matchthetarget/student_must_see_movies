<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Reviews

    <a data-toggle="collapse" href="#movie_reviews_new_form">
      Add review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @movie.reviews.each do |review| %>
      <li class="media my-4 mx-1">
        <img src="https://images.fandango.com/cms/assets/a2f0b9d0-cf84-11eb-a507-3be98bb99253--actordefaulttmb.gif" class="mr-3 rounded-circle" alt="user-profile-picture">
        <div class="media-body">
          <div class="d-flex">
            <h5 class="mt-1"><%= review.user.username %></h5>
            <div class="ml-4 mt-1 d-flex">
              <% review.rating.times do %>
                <i class="fas fa-star"></i>
              <% end %>
              <% (5 - review.rating).times do %>
                <i class="far fa-star"></i>
              <% end %>
            </div>
          </div>
          <div class="d-flex justify-content-between">
            <p><%= review.body %></p>

            <% if current_user == review.user %>
              <div class="d-flex">
                <%= link_to edit_review_url(review), class: "mr-4" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
                <%= link_to review, class: "mr-4", method: :delete do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="movie_reviews_new_form">
        <%= render partial: "movies/movie_reviews_new_form" %>
      </div>
    </div>

  </ul>
</div>

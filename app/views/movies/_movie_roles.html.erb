<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Cast

    <a data-toggle="collapse" href="#movie_roles_new_form">
      Add character
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @movie.roles.each do |character| %>
      <li class="list-group-item d-flex align-items-center">
        <%= link_to "#{character.actor}", character.actor, class: "mr-2" %> (<%= character %>)
      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="movie_roles_new_form">
        <%= render partial: "movies/movie_roles_new_form" %>
      </div>
    </div>

  </ul>
</div>

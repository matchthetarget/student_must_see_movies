<h1>
  All actors
</h1>

<a href="/actors/new">
  Add a new actor
</a>

<hr>

<table class="table">
  <tr>
    <th>
      Image
    </th>

    <th>
      Dob
    </th>

    <th>
      Name
    </th>

    <th>
      Bio
    </th>

    <th>
    </th>
  </tr>

  <% @actors.each do |actor| %>
  <tr>
    <td>
      <img src="<%= actor.image %>" width="80">
    </td>

    <td>
      <%= actor.dob %>
    </td>

    <td>
      <%= actor.name %>
    </td>

    <td>
      <%= truncate(actor.bio) %>
    </td>


    <td>
      <a href="/actors/<%= actor.id %>" class="btn btn-primary">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>

<div class="card-footer d-flex justify-content-center">
  <%= paginate @actors, theme: 'twitter-bootstrap-4' %>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <h1 class="display-4">
      My Reviews
    </h1>
  </div>
</div>

<div class="row justify-content-center mb-3">
  <div class="col-md-8">
    <div class="card">
      <div class="list-group list-group-flush">
        <%= render collection: @reviews, partial: "list_item", as: :review %>
      </div>
      <div class="card-footer d-flex justify-content-center">
        <%= paginate @reviews, theme: 'twitter-bootstrap-4' %>
      </div>

    </div>
  </div>
</div>
